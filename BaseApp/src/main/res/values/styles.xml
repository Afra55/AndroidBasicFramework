<resources>

    <!-- 引导页theme -->
    <style name="SplashTheme" parent="BaseTheme">
        <!-- app启动画面 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="MainTheme" parent="AppTheme"/>

    <style name="activty_fade_in_fade_out">
        <item name="@android:activityOpenEnterAnimation">@animator/activity_in</item>
        <item name="@android:activityOpenExitAnimation">@animator/activity_out</item>
        <item name="@android:activityCloseEnterAnimation">@animator/activity_in</item>
        <item name="@android:activityCloseExitAnimation">@animator/activity_out</item>
    </style>

    <style name="button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>
